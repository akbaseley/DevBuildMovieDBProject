
@{
    ViewBag.Title = "Index";
}

<h2>Movie Index</h2>

<table class="table">
    <tr>
        <th>
            Movie Title
        </th>
        <th>
            Genre
        </th>
        <th>
            Year
        </th>
        <th>
            Director
        </th>
    </tr>
    @foreach (var movie in ViewBag.MovieList)
    {
        <tr>
            <td>@movie.MovieTitle</td>
            <td>@movie.Genre</td>
            <td>@movie.Year</td>
            @if (movie.Director != null)
            {
            <td>@movie.Director.FirstName @movie.Director.LastName</td>
            }
            else
            {
                <td><a href="~/Database/AddDirector">Add a Director to this Movie</a></td>
            }
        </tr>
    }
</table>

<a href="~/Database/AddMovie" class="btn-group">Add a new Movie to Database</a>

